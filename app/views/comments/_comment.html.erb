<div class="color round2">
    <div class="comment-body">
        <div class="media">
            <div class="pull-left">

                <strong>Comment by: <%= comment.user.username %></strong> <br />
                <br>
                <%= image_tag comment.user.image.url(:thumb), class: "img-circle" %>

            </div>

            <br>

            <div class="media-body">
                <p class="media-heading pull-right">
                  <%= time_ago_in_words(comment.created_at) %>
                </p><br />
                <%= comment.body %>
                <br />

            </div>

            <br />
        </div>

        <br />


        <%= link_to "Edit Comment", edit_article_comment_path(comment.article, comment), class: "btn btn-info btn-xs round" %>
        <%= link_to "Delete Comment", [comment.article, comment], method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs round" %>

        <br />
    </div>
</div>

<br />
