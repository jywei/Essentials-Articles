<%= link_to 'Back', articles_path, class: "btn btn-success round" %>

<% if can? :update, @article %>
    | <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-info round" %> |
<% end %>

<% if can? :destroy, @article %>
    <%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are really sure you want to do this?' }, class: "btn btn-danger round" %>
<% end %>

